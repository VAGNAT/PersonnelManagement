@using Model
@model Department

@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddDepartment</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GroupDepartment" class="control-label"></label>
                <select asp-for="GroupDepartmentId" asp-items="@ViewBag.AllDepartments" class="form-control">
                    <option value=@null>Select a Department</option>                    
                </select>                
            </div>
            <div class="row">
                <div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="All" type="button" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
